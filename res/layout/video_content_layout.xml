<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/video_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:textSize="20sp"
        android:textColor="#000000"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center">
        
       <ImageView
	        android:id="@+id/video_content_video"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center"/>
       
       <ImageView
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:src="@drawable/play"
	        android:layout_gravity="center"/>
    </FrameLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="30dp">
	    
	    <de.hdodenhof.circleimageview.CircleImageView
	        android:id="@+id/video_user_image"
	        android:layout_width="30dp"
	        android:layout_height="30dp"
	        android:layout_alignParentStart="true"
	        android:paddingStart="10dp">
	        
    	</de.hdodenhof.circleimageview.CircleImageView>
    	
	    <TextView
	        android:id="@+id/video_content_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	    	android:layout_toRightOf="@id/video_user_image"
	        android:paddingStart="10dp"
	        android:layout_centerVertical="true"/>
	    
	    <View
	        android:id="@+id/video_content_view"
	        android:layout_width="1dp"
	    	android:layout_height="wrap_content"
	    	android:background="#ADAAAD"
	    	android:layout_alignTop="@id/video_content_content"
	    	android:layout_toRightOf="@id/video_content_content"
	    	android:layout_marginLeft="5dp"
	    	android:layout_marginRight="5dp"
	    	android:layout_marginBottom="2dp"/>

    	<TextView
	        android:id="@+id/video_content_companyname"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:singleLine="true"
	        android:ellipsize="end"
	        android:layout_alignTop="@id/video_content_view"
	    	android:layout_toRightOf="@id/video_content_view"/>
    	
    </RelativeLayout>

</LinearLayout>
