<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">

    <TextView 
        android:id="@+id/news_manager_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"/>
    
    <LinearLayout 
        android:id="@+id/news_manager_detail_content_head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">
        
        <ImageView
            android:id="@+id/news_manager_detail_content_1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"/>
        <ImageView 
            android:id="@+id/news_manager_detail_content_2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView 
            android:id="@+id/news_manager_detail_content_3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/news_manager_detail_video_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="gone"
        android:layout_below="@id/news_manager_detail_title">
        
       <com.longner.lib.JCVideoPlayerStandard
	        android:id="@+id/news_manager_detail_video"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/news_manager_detail_apply_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        
       <Button
	        android:id="@+id/news_manager_detail_topapply"
	        android:layout_width="70dp"
        	android:layout_height="30dp"
	        android:text="头条申请"
	        android:layout_margin="2dp"
	        android:background="@drawable/apply_button"
	        android:textColor="#ffffff"/>
       
       <Button
	        android:id="@+id/news_manager_detail_update"
		    android:layout_width="70dp"
        	android:layout_height="30dp"
	        android:text="修改1"
	        android:textColor="#000000"
	        android:layout_margin="2dp"
	        android:background="@drawable/apply_button"/>
       
       <Button
	        android:id="@+id/news_manager_detail_delete"
	        android:layout_width="70dp"
        	android:layout_height="30dp"
	        android:text="删除"
	        android:textColor="#ffffff"
	        android:layout_margin="2dp"
	        android:background="@drawable/apply_button"/>
        
    </LinearLayout>
    
</LinearLayout>
