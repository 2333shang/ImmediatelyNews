<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/order_detail_headicon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/first"/>
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:orientation="vertical"
	    android:layout_marginLeft="10dp"
	    android:layout_toRightOf="@id/order_detail_headicon">
	    
	    <TextView 
	        android:id="@+id/order_detail_companyname"
	        android:layout_width="170dp"
	        android:layout_height="50dp"
	        android:maxLines="2"
	        android:textSize="18sp"
	        android:textColor="#000000"
	        android:gravity="center_vertical"/>
	    
	    <TextView 
	        android:id="@+id/order_detail_content_creater"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:textColor="#000000"
	        android:gravity="center_vertical"/>
	    
	    <TextView 
	        android:id="@+id/order_detail_content_createtime"
	        android:layout_width="match_parent"
	        android:layout_height="25dp"
	        android:textColor="#000000"
	        android:gravity="center_vertical"/>
	    
	</LinearLayout>
	
    <Button
        android:id="@+id/order_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="取消关注"
        android:textColor="#ffffff"
        android:background="@drawable/apply_button"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"/>

</RelativeLayout>
