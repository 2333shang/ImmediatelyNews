<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
	    <TextView
	        android:id="@+id/user_headicon_text"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="头像"
	        android:layout_alignParentLeft="true"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/user_headicon_last"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:textSize="20sp"
	        android:text=">"
	        android:gravity="center"/>
	    
		<de.hdodenhof.circleimageview.CircleImageView
		    android:id="@+id/user_headicon"
	        android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:layout_toLeftOf="@id/user_headicon_last"
	        android:src="@drawable/first"
	        android:gravity="end"
	        android:layout_marginRight="10dp"/>      
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp">
        
	    <TextView
	        android:id="@+id/user_name_text"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="用户名"
	        android:layout_alignParentLeft="true"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/user_name_last"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:layout_alignParentRight="true"
	        android:text=">"
	        android:gravity="center"/>
	    
		<TextView
		    android:id="@+id/user_name"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_toLeftOf="@id/user_name_last"
	        android:gravity="center"
	        android:layout_marginRight="10dp"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center">
        
	    <TextView
	        android:id="@+id/user_gender_text"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="性别"
	        android:layout_alignParentLeft="true"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/user_gender_last"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:layout_alignParentRight="true"
	        android:text=">"
	        android:gravity="center"/>
	    
		<TextView
		    android:id="@+id/user_gender"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_toLeftOf="@id/user_gender_last"
	        android:gravity="center"
	        android:layout_marginRight="10dp"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center">
        
	    <TextView
	        android:id="@+id/user_birth_text"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="生日"
	        android:layout_alignParentLeft="true"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/user_birth_last"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:textSize="20sp"
	        android:layout_alignParentRight="true"
	        android:text=">"
	        android:gravity="center"/>
	    
		<TextView
		    android:id="@+id/user_birth"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_toLeftOf="@id/user_birth_last"
	        android:gravity="center"
	        android:layout_marginRight="10dp"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp">
        
	    <TextView
	        android:id="@+id/user_company_text"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:text="所属企业"
	        android:layout_alignParentLeft="true"
	        android:gravity="center"
	        android:layout_marginRight="10dp"/>
	    
	    <!-- <TextView
	        android:id="@+id/user_company_last"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"/> -->
	    
		<TextView
		    android:id="@+id/user_company"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_alignParentRight="true"
	        android:gravity="center"/>
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"/>
    
</LinearLayout>
