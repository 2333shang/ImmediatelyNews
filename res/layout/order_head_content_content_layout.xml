<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <RelativeLayout
	    android:id="@+id/order_head_content_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	   	<de.hdodenhof.circleimageview.CircleImageView
	        android:id="@+id/order_head_content_user_image"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:layout_alignParentLeft="true"
	        android:paddingLeft="10dp">
	        
	   	</de.hdodenhof.circleimageview.CircleImageView>
	   	
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_toRightOf="@id/order_head_content_user_image"
	        android:paddingLeft="10dp">
		    <TextView
		        android:id="@+id/order_head_content_user"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:gravity="center_vertical"/>
		    
	    	<TextView
		        android:id="@+id/order_head_content_authortype"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="2"/>
	   	</LinearLayout>
	    	
<!-- 	    <ImageView 
	        android:id="@+id/order_head_comment_praise"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:src="@drawable/ic_action_add"
	        android:layout_alignParentRight="true"
	        android:paddingRight="10dp"/> -->
	    
	    
	</RelativeLayout>
	<TextView
        android:id="@+id/order_head_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_head_content_layout"/>
	
</RelativeLayout>
