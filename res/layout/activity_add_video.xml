<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/video_newsbar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal"
        android:background="#000000">
        
        <TextView 
            android:id="@+id/add_video_cancel"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#ffffff"
            android:onClick="cancel"
            android:gravity="center"/>
        
        <TextView 
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:text="发视频"
            android:textColor="#ffffff"
            android:gravity="center"/>
        
        <TextView 
            android:id="@+id/add_video_submit"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="发布"
            android:textColor="#ffffff"
            android:onClick="submit"
            android:gravity="center"/>
        
    </LinearLayout>
    
    <EditText 
        android:id="@+id/news_video_titie"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="请输入标题!"
        android:layout_below="@id/video_newsbar"/>
    
    <WebView
        android:id="@+id/news_video_content"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/news_video_titie"
        android:visibility="gone"/>
    
    <ProgressBar 
        android:id="@+id/news_video_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"
        android:visibility="gone"/>

    <Button 
        android:id="@+id/news_video_sendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上传视频"
        android:onClick="selectvideo"/>
</LinearLayout>
