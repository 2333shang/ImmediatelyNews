<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_content_detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="cancelComments">
    
    <com.longner.lib.JCVideoPlayerStandard
        android:id="@+id/video_content_detail_video"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"/>
    <RelativeLayout
        android:id="@+id/video_detail_usermessage"
        android:layout_width="match_parent"
    	android:layout_height="60dp"
    	android:layout_below="@id/video_content_detail_video">
	    
	    <de.hdodenhof.circleimageview.CircleImageView
	        android:id="@+id/video_detail_user_image"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_alignParentStart="true"
	        android:paddingStart="10dp">
	        
    	</de.hdodenhof.circleimageview.CircleImageView>
    	
	    <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="60dp"
	        android:orientation="vertical"
	        android:layout_toRightOf="@id/video_detail_user_image"
	        android:layout_marginLeft="10dp">
		    <TextView
		        android:id="@+id/video_content_detail_user"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:gravity="center_vertical"/>
		    
	    	<TextView
		        android:id="@+id/video_content_detail_fans"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:gravity="center_vertical"/>
    	</LinearLayout>
    	
	    <Button 
	        android:id="@+id/video_content_detail_order"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="关注"
	        android:background="@drawable/order_button_custom"
	        android:textColor="#ffffff"
	        android:layout_alignParentEnd="true"
	        android:layout_marginRight="10dp"
	        android:layout_centerVertical="true"/>
    </RelativeLayout>
    
   	<View
   	    android:id="@+id/video_divi_view"
        android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:background="#ADAAAD"
    	android:layout_below="@id/video_detail_usermessage"/>
	
   	<LinearLayout
   	    android:orientation="vertical"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:layout_below="@id/video_divi_view">
   	    
		<android.support.v7.widget.RecyclerView 
	        android:id="@+id/video_detail_recyclerview"
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1"/>
		
		<RelativeLayout 
		    android:layout_width="match_parent"
	    	android:layout_height="50dp">
		    
		    <Button 
		        android:id="@+id/video_content_detail_sendbtn"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:text="发表"
		        android:textSize="10sp"
		        android:layout_alignParentLeft="true"
		        android:onClick="addComments"/>
		    
			 <ImageView 
		        android:id="@+id/video_content_detail_phraisebtn"
		        android:layout_width="50dp"
			    android:layout_height="50dp"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="10dp"
		        android:src="@drawable/phraise"
		        android:onClick="phraise"/>
		     
		     <ImageView 
		        android:id="@+id/video_content_detail_collectbtn"
		        android:layout_width="50dp"
		        android:layout_height="50dp"
		        android:layout_toLeftOf="@id/video_content_detail_phraisebtn"
		        android:src="@drawable/collect"
		        android:onClick="collect"/>
		</RelativeLayout>
		
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/video_comment_send_layout"
	    android:layout_width="match_parent"
	    android:layout_height="80dp"
	    android:orientation="horizontal"
	    android:background="@drawable/video_comment_popup_shape"
	    android:visibility="gone"
	    android:layout_alignParentBottom="true">
	    
	    <EditText
	        android:id="@+id/video_comment_send_edit"
	        android:layout_width="0dp"
	        android:layout_weight="5"
	        android:layout_height="80dp"
	        android:gravity="top"
	        android:hint="请输入你的评论！"/>
	    
	    <Button 
	        android:id="@+id/video_comment_send_btn"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:text="发表"
	        android:onClick="sendComments"/>
	    
	</LinearLayout>
	
</RelativeLayout>
