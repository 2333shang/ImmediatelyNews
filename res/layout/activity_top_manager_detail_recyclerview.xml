<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView 
        android:id="@+id/top_manager_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"/>
    
    <LinearLayout 
        android:id="@+id/top_manager_detail_content_head"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">
        
        <ImageView
            android:id="@+id/top_manager_detail_content_1"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"/>
        <ImageView 
            android:id="@+id/top_manager_detail_content_2"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <ImageView 
            android:id="@+id/top_manager_detail_content_3"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/top_manager_detail_video_head"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:visibility="gone">
        
       <com.longner.lib.JCVideoPlayerStandard
	        android:id="@+id/top_manager_detail_video"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center"/>
        
    </LinearLayout>

    <RelativeLayout 
        android:id="@+id/top_manager_detail_apply"
        android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="gone">
        
	    <TextView 
	        android:id="@+id/top_manager_detail_apply_reason"
	        android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentBottom="true"/>
	    
	    <Button 
	        android:id="@+id/top_manager_detail_apply_rejust"
	        android:layout_width="50dp"
		    android:layout_height="30dp"
		    android:text="退回"
		    android:layout_alignParentRight="true"
		    android:background="#ff0000"/>
        
	    <Button 
	        android:id="@+id/top_manager_detail_apply_agree"
	        android:layout_width="50dp"
		    android:layout_height="30dp"
		    android:text="同意"
		    android:background="#00ff00"
		    android:layout_toLeftOf="@id/top_manager_detail_apply_rejust"/>
	    
    </RelativeLayout>
</LinearLayout>
