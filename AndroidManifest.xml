<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shang.immediatelynews"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".NewsApplication"
        android:allowBackup="true"
        android:icon="@drawable/news"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.longner.lib.JCFullScreenActivity"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.shang.immediatelynews.activity.VideoContentActivity"
            android:label="@string/title_activity_video_content" >
        </activity>
        <activity
            android:name="com.shang.immediatelynews.activity.NewsCommentReplyActivity"
            android:label="@string/title_activity_video_content" >
        </activity>
        <activity
            android:name="com.shang.immediatelynews.activity.NewsContentActivity"
            android:label="@string/title_activity_video_content" >
        </activity>
        <activity
            android:name="com.shang.immediatelynews.activity.NewsContentActivity2"
            android:label="@string/title_activity_video_content" >
        </activity>
    </application>

</manifest>
